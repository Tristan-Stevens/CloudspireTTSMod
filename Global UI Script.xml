<!-- Opening Screen for picking PvE or PvP -->

<Panel
    id="modeselect"
    height="650"
    width="664"
    color="rgba(90,120,120,0.5)"
    rectAlignment="UpperCenter"
    offsetXY="0 -80"
    hideAnimation="FadeOut"
    animationDuration="0.2"
    allowDragging="true"
    returnToOriginalPositionWhenReleased="false"
    >
    <Image
      image="CloudspireBox"
      preserveAspect="true"
      height="565"
      width="664"
      rectAlignment="UpperCenter"
      >
    </Image>
    <Button
      onClick="hideWindow"
      height="70"
      width="70"
      color="rgba(0,0,0,0.7)"
      text="X"
      textColor="rgba(0,0,0,0.9)"
      fontStyle="Bold"
      fontSize="45"
      rectAlignment="UpperRight"
      >
    </Button>
    <Button
      onClick="pve"
      height="50"
      width="250"
      color="rgba(50,50,50,1)"
      text="Solo/Co-Op"
      textColor="rgba(0,0,0,1)"
      fontStyle="Bold"
      fontSize="25"
      rectAlignment="LowerLeft"
      offsetXY="15 10"
      >
    </Button>
    <Button
      onClick="pvp"
      height="50"
      width="250"
      color="rgba(50,50,50,1)"
      text="PvP"
      textColor="rgba(0,0,0,1)"
      fontStyle="Bold"
      fontSize="25"
      rectAlignment="LowerRight"
      offsetXY="-15 10"
      >
    </Button>
</Panel>

